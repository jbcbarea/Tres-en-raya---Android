<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/jugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/jugador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador2"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/jugador1puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/jugador1"
        app:layout_constraintLeft_toLeftOf="@+id/jugador1"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/jugador2puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/jugador2"
        app:layout_constraintLeft_toLeftOf="@+id/jugador2"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/statusjugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/jugador1puntos"
        android:layout_marginTop="15dp"
        android:text="El jugador2 ha ganado"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/statusjugador"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        />

    <Button
        android:id="@+id/btn_01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn_00"
        app:layout_constraintLeft_toRightOf="@id/btn_00"
        android:layout_marginLeft="5dp"


    />
    <Button
        android:id="@+id/btn_02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn_01"
        app:layout_constraintLeft_toRightOf="@id/btn_01"
        android:layout_marginLeft="5dp"

        />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_00"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"

        />


    <Button
        android:id="@+id/btn_11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_01"
        app:layout_constraintLeft_toRightOf="@id/btn_10"
        android:layout_marginLeft="5dp"
        />


    <Button
        android:id="@+id/btn_12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_02"
        app:layout_constraintLeft_toRightOf="@id/btn_11"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        />
    <Button
        android:id="@+id/btn_21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_11"
        app:layout_constraintLeft_toRightOf="@id/btn_20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_12"
        app:layout_constraintLeft_toRightOf="@id/btn_21"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/resetjuego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Resetear"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_21"
        />


</androidx.constraintlayout.widget.ConstraintLayout>